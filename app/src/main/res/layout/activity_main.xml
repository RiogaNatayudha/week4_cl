<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRow1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:background="@color/white"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="56sp"
            app:layout_constraintBottom_toTopOf="@id/buttonRow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:id="@+id/buttonRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">

        <Button
            android:textColor="@color/orange"
            style="@style/CalculatorButton"
            android:text="AC" />

        <Button
            android:textColor="@color/orange"
            android:id="@+id/buttonDot"
            style="@style/CalculatorButton"
            android:text="+/-" />

        <Button
            android:textColor="@color/orange"
            android:id="@+id/buttonPercent"
            style="@style/CalculatorButton"
            android:text="%" />

        <Button
            android:textColor="@color/orange"
            style="@style/CalculatorButton"
            android:text="รท" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow1">

        <Button
            android:textColor="@color/black"
            style="@style/CalculatorButton"
            android:text="7" />

        <Button
            android:textColor="@color/black"
            style="@style/CalculatorButton"
            android:text="8" />

        <Button
            android:textColor="@color/black"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/orange"
            android:text="ร" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow2">

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="4" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="5" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="6" />

        <Button
            android:textColor="@color/orange"
            style="@style/CalculatorButton"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow4"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow3">

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="1" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="2" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="3" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/orange"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow4">

        <ImageView
            android:src="@drawable/baseline_screen_rotation_alt_24"
            style="@style/CalculatorButton"
            android:textColor="@color/orange"
            android:text="0" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="0" />

        <Button
            style="@style/CalculatorButton"
            android:textColor="@color/black"
            android:text="," />

        <Button
            android:textColor="@color/orange"
            style="@style/CalculatorButton"
            android:text="=" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>